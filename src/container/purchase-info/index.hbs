<main class="main">
  {{> heading title="Інформація про замовлення"}}
  
	{{#with data.purchase}}
    <div class="purchase-info">

			<!-- Секція "ID замовлення" -->
			<div class="section">
				<div>
					<h2>ID:</h2>
					<p>{{id}}</p>
				</div>
			</div>

			{{> divider}}

			<!-- Секція "Інформація про покупця" -->
			<div class="section">
				<div class="sub--section">
					<div>
						<h2>Ім'я:</h2>
						<p>{{firstname}}</p>
					</div>
					<div>
						<h2>Телефон:</h2>
						<p>{{phone}}</p>
					</div>
				</div>
				<div class="sub--section">
					<div>
						<h2>Прізвище:</h2>
						<p>{{lastname}}</p>
					</div>
					<div>
						<h2>Електронна пошта:</h2>
						<p>{{email}}</p>
					</div>
				</div>
				
			</div>

			{{> divider}}

			<!-- Секція "Інформація про товар і коментар" -->
			<div class="section">
				<div>
					<h2>Назва товару:</h2>
					<p>{{product.title}}</p>
				</div>
			</div>

			<div class="section">
				<div>
					<h2>Коментар:</h2>
					<p>{{comment}}</p>
				</div>
			</div>

			{{> divider}}

			<!-- Секція "Ціни та бонуси" -->
			<div class="section">
			
				<div class="sub--section">
					<div>
						<h2>Вартість товарів:</h2>
						<p>{{productPrice}} грн</p>
					</div>
					<div>
						<h2>Сума до сплати:</h2>
						<p>{{totalPrice}} грн</p>
					</div>
				</div>

				<div class="sub--section">
					<div>
						<h2>Вартість доставки:</h2>
						<p>{{deliveryPrice}} грн</p>
					</div>
					<div>
						<h2>Нараховані бонуси:</h2>
						<p>{{bonus}} грн</p>
					</div>
				</div>

			</div>

			{{> divider}}

			<a href="/purchase-edit?id={{id}}" class="edit-button">Змінити дані</a>
    </div>
  {{/with}}

</main>